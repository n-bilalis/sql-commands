<%- include("_header") -%>

<h1>Update an author</h1>

<form action="/edit_author/<%= model.au_id %>" method="post">
  <div class="form-horizontal">

	<div class="form-group row">
	  <label class="col-form-label col-sm-2" for="Name">Name</label>
	  <div class="col-sm-8">
		<input autofocus class="form-control" name="Name" value="<%= model.name %>" />
	  </div>
	</div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Update" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/authors">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>
