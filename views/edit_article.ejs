<%- include("_header") -%>

<h1>Update an article</h1>

<form action="/edit_article/<%= article.a_id %>" method="post">
  <div class="form-horizontal">

	<div class="form-group row">
	  <label class="col-form-label col-sm-2" for="Title">Title</label>
	  <div class="col-sm-8">
		<input autofocus class="form-control" name="Title" value="<%= article.title %>" />
	  </div>
	</div>

	<div class="form-group row">
	  <label class="col-form-label col-sm-2" for="Author">First author</label>
	  <div class="col-sm-8">
		<select name="Author">
		  <% for (const author of authors) { %>
			<option value="<%= author.au_id %>" <% if (author.au_id == article.au_id) { %> selected="selected" <% } %>><%= author.name %></option>
		  <% } %>
		</select>
	  </div>
	</div>
	
	<div class="form-group row">
	  <label class="col-form-label col-sm-2" for="Issue">Issue</label>
	  <div class="col-sm-8">
	    <select name="Issue">
		  <% for (const issue of issues) { %>
		    <option value="<%= issue.i_id %>" <% if (issue.i_id == article.i_id) { %> selected="selected" <% } %>><%= issue.number %> of <%= issue.title %></option>
		  <% } %>
	    </select>
	  </div>
	</div>
	
    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Update" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/books">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>